@model IEnumerable<Ogrenci>
    <h2>Öğrenci Listesi</h2>
    <hr>
    <table class="table table-bordered">
        <thead>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.OgrenciId)</th>
            <th>@Html.DisplayNameFor(m => m.OgrenciAd)</th>
            <th>@Html.DisplayNameFor(m => m.OgrenciSoyad)</th>
            <th style="width: 150px;">İşlemler</th>
            
        </thead>
        @foreach ( var ogrenci in Model){
            <tr>
                <td>@ogrenci.OgrenciId</td>
                <td>@ogrenci.OgrenciAd</td>
                <td>@ogrenci.OgrenciSoyad</td>
               
              <td> <a asp-controller="Ogrenci" asp-action="Edit" asp-route-id ="@ogrenci.OgrenciId" class="btn btn-primary">Edit</a>
                   <a asp-controller="Ogrenci" asp-action="Delete"  asp-route-id="@ogrenci.OgrenciId" class="btn btn-danger">Delete</a> 


                </td>
            </tr>
           
        }
        
    </table>